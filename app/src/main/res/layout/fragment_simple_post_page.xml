<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/progress_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title Text View -->
            <TextView
                android:id="@+id/post_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Text Content Paragraphs Table Layout -->
            <TableLayout
                android:id="@+id/post_p_content_table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/post_title_text_view"/>

            <TextView
                android:id="@+id/comments_literal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/post_p_content_table_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/comments"
                android:visibility="gone"
                android:textSize="20sp"/>

            <com.unoffical.barcablaugranes.custom.CustomExpandableListView
                android:id="@+id/post_comments_exp_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"
                app:layout_constraintTop_toBottomOf="@id/comments_literal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>