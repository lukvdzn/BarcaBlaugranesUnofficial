<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/post_single_comment_divider"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/post_single_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_single_comment_divider"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/post_single_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_single_comment_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/post_single_comment_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_single_comment_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="italic"
        android:textSize="12sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/post_single_comment_created_on"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/post_single_comment_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="italic"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:gravity="end"/>



</androidx.constraintlayout.widget.ConstraintLayout>