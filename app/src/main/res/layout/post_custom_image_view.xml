<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Image View -->
    <ImageView
        android:id="@+id/post_custom_page_image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/image_of_post"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Publisher of Image -->
    <TextView
        android:id="@+id/post_image_publisher_text_view"
        android:layout_margin="5dp"
        style="@style/SmallDetailTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_custom_page_image_view"/>

    <!-- Divider View -->
    <View
        android:id="@+id/post_image_publisher_divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?android:attr/listDivider"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/post_image_publisher_text_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>